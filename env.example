# TastyShare Environment Configuration
# Copy this file to .env and update the values

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Secret Keys (generate new ones for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
# For development (SQLite)
DEV_DATABASE_URL=sqlite:///tastyshare_dev.db

# For production (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/tastyshare

# For testing
TEST_DATABASE_URL=sqlite:///:memory:

# Railway Configuration (automatically set by Railway)
# DATABASE_URL=postgresql://...

# Optional: Custom upload folder
# UPLOAD_FOLDER=static/uploads/recipes

# Optional: Max file size (in bytes)
# MAX_CONTENT_LENGTH=16777216
